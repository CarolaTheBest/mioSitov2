---
export interface Props {
  simboli: string[];
}
import katex,{ KatexOptions } from "katex";
import "../scss/globale.scss";
const { simboli } = Astro.props;
const opzioni: KatexOptions = { strict: false };
---

<table class="tabellaSimboli">
  <tr>
