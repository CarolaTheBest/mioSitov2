---
import logo from "../../images/24x24.svg";
import { ElementiTopBar } from "./elementiTopBar";
---

<div class="barraTop">
  <div class="wrapper">
    <div class="logo">
      <a href="/">
        <img src={logo} alt="Logo Edoardo" />
      </a>
    </div>

    <div class="elementiSinistra">
      <ElementiTopBar client:idle />
    </div>
  </div>
</div>

<style lang="scss">
  .barraTop {
    .wrapper {
      display: flex;
      flex: 1 1 auto;
      align-items: center;
      vertical-align: middle;
      height: 3.75rem;
      position: sticky;
      border: 1px solid rgb(221, 221, 221);
      padding: 0.5rem 5rem;

      box-shadow: 0px 0.9px 1.3px rgba(0, 0, 0, 0.035), 0px 7px 10px rgba(0, 0, 0, 0.07);
    }

    .logo {
      height: 100%;
      margin-right: 1rem;

      img {
        height: 100%;
        width: auto;
      }
    }
  }
</style>
