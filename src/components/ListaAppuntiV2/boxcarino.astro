---
import type {
CapitoloData,DocumentoData
} from "../../types/alberoAppunti";
import BordiBelli from "./bordiBelli.astro";

interface Props {
	data: DocumentoData | CapitoloData;
}
const { data } = Astro.props;
---

<BordiBelli>
	<a href={data.url} class="aContent">
		<div class="rigaTitolo">
			<span class="titolo">{data.titolo}</span>
			{
				(data as DocumentoData).capitolo ? (
					<span class="ultimaModifica">
						Capitolo: {(data as DocumentoData).capitolo}
					</span>
				) : null
			}
		</div>

		<span class="link">Leggi tutto</span>
	</a>
</BordiBelli>

<style lang="scss">
	@import "../../scss/variabili.scss";

	$animazione: 0.6s cubic-bezier(0.22, 1, 0.36, 1);

	.rigaTitolo {
		display: flex;
		align-items: baseline;
		gap: 1rem;
	}

	.ultimaModifica {
		color: $coloreDisattivato;
		font-size: 0.9rem;
	}

	.aContent {
		text-decoration: none;
		padding: 1em 2em;
		display: block;
	}

	.titolo {
		font-size: 1.25rem;
		display: block;
		color: $coloreEvidenziato;
	}

	.titolo::first-letter {
		text-transform: uppercase;
	}

	.descrizione {
		margin-bottom: 0;
		line-height: 1.35rem;
	}

	.descrizione:after {
		content: "...";
	}

	.link {
		display: block;
		color: $colorePrincipale;
		margin-top: 1.2rem;
		font-size: 0.8rem;
	}

	@include tablet {
		.rigaTitolo {
			flex-direction: column;
		}
	}

	@include scuroBox {
		.titolo {
			color: $coloreTestoScuro;
		}
	}
</style>
