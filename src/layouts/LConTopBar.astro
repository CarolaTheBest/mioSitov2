---
import TopBar from "../components/topBar/topBar.astro";
import Layout from "./Layout.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
  <div id="portalNav"></div>
  <nav class="barra">
    <TopBar />
  </nav>

  <main>
    <slot />

    <div id="questo"></div>
  </main>
</Layout>

<style lang="scss">
  .barra {
    position: sticky;
    top: 0;
    z-index: 100;
    background-color: white;
  }

  #portalNav {
    z-index: 101;
  }

  #questo {
    height: 200vh;
  }
</style>
