---
import TopBar from "../components/topBar/topBar.astro";
import Layout from "./Layout.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
  <nav class="barra">
    <TopBar>
      <slot name="elem-mobile-destra" slot="elem-mobile-destra" />
    </TopBar>
  </nav>

  <main>
    <slot />
  </main>
</Layout>

<style lang="scss">
  .barra {
    position: sticky;
    top: 0;
    z-index: 100;
    background-color: white;
  }
</style>
