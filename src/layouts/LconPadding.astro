---
import TopBar from "../components/topBar/topBar.astro";
import Layout from "./Layout.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
  <!-- <div id="portalNav"></div> -->
  <nav class="barra">
    <TopBar>
      <slot slot="elem-mobile-destra" name="elem-mobile-destra" />
    </TopBar>
  </nav>

  <main>
    <div class="wrapper">
      <slot />
    </div>
  </main>
</Layout>

<style lang="scss">
  @import "../scss/variabili.scss";

  .wrapper {
    @include paddingGenerale;
  }

  .barra {
    position: sticky;
    top: 0;
    z-index: 100;
    background-color: white;
  }

  #portalNav {
    z-index: 101;
  }
</style>
